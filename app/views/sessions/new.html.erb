<h1>Log In</h1>
<%= form_for(@user, url: sessions_path, method: (:post)) do |f| %>
  <div>
    <%= f.text_field :email, :placeholder => "Email", autofocus: true %>
  </div>
  <div>
    <%= f.password_field :password, :placeholder => "Password" %>
  </div>
  <div>
    <%= f.submit "Log In" %>
  </div>
<% end %>
<%= link_to 'Create Account', new_user_path %>
