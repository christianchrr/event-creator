<h1>@event.name</h1>

<p>
    <label>Location:</label>
    <%= link_to @event.location.name, location_path(@event) %>
</p>

<p>
    <label>Description:</label>
    <%= @event.description %>
</p>

<p>
    <label>Date:</label>
    <%= @event.month %>/<%= @event.day %>/<%= @event.year %>
</p>

<%= link_to 'Edit', edit_event_path(@event) %>
<%= link_to 'Back', events_path %>