<%= form_with model: @event, local: true do |f| %>
    <% if @event.errors.any? %>
        <% @event.errors.full_messages.each do |message| %>
            <ul>
                <li><%= message %></li>
            </ul>
        <% end %>
    <% end %>
    <br>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>
    <%= f.label :description %><br>
    <%= f.text_area :description %><br><br>

    <%= f.submit %>
<% end %>