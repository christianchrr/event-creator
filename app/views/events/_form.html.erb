<%= form_with mode: @event, local: true do |f| %>
    <% if @event.errors.any? %>
        <% @event.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>
    <%= f.label :description %><br>
    <%= f.text_area :description %><br><br>
    <%= f.submit %>
<% end %>